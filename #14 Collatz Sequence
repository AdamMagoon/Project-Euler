import time

start = time.clock()

def show_sequence(startingNumber):
    n = startingNumber
    my_list = [n]
    while n > 1:
        if n % 2 == 0:
            n = n / 2
            my_list.append(int(n))
        else:
            n = (n * 3) + 1
            my_list.append(int(n))
    return my_list

def find_longest_sequence(maxNumber):
    longest_list = 0
    starting_number = 0
    for i in range(1,maxNumber,2):
        print(i)
        n = show_sequence(i)
        if len(n) > longest_list:
            longest_list = len(n)
            starting_number = i
    return starting_number

print(find_longest_sequence(1000000))

end = time.clock()
total = end-start
if total > 60:
    minutes = int(total / 60)
    seconds = total % 60
print(minutes, "minutes and", seconds, "seconds")
    
